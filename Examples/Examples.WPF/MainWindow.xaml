<Window x:Class="Examples.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Examples.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock Text="{Binding CurrentTime, StringFormat='HH:mm:ss'}"/>
            <Button Width="100" Height="40" Content="Show message" 
                    Command="{Binding ClickCommand}"/>
            <TextBlock Text="{Binding Message}"/>
            <Button Width="100" Height="40" Content="Show confirm" 
                    Command="{Binding ConfirmCommand}"/>
        </StackPanel>
    </Grid>
</Window>
